#!/usr/bin/env zsh

PLUGIN_DIR="$CONFIG_DIR/plugins"

typeset -A DISPLAY_MAP
while IFS=: read -r a s; do DISPLAY_MAP[$a]=$s; done < <("$PLUGIN_DIR/display_map.sh")

workspace_data=()
for monitor_id in $(aerospace list-monitors | awk '{print $1}'); do
  sb_display="${DISPLAY_MAP[$monitor_id]:-1}"
  for sid in $(aerospace list-workspaces --monitor "$monitor_id"); do
    [[ "$sid" == "0" ]] && continue
    workspace_data+=("$sid:$sb_display")
  done
done

sketchybar \
  --bar position=top height=32 blur_radius=30 color=0xbb000000 \
  --default padding_left=5 padding_right=5 \
           icon.font="Hack Nerd Font:Bold:17.0" \
           label.font="SF Pro:Semibold:17.0" \
           icon.color=0xffffffff label.color=0xffffffff \
           icon.padding_left=4 icon.padding_right=4 \
           label.padding_left=4 label.padding_right=4 \
           updates=on \
           background.drawing=on background.color=0xff3c3c3c background.corner_radius=5 background.height=22 background.padding_left=4 background.padding_right=4 \
  --add event aerospace_workspace_change \
  --add event display_change \
  --add item chevron left \
  --set chevron icon=φ label.drawing=off background.drawing=off\
  --add item front_app left \
  --set front_app icon.drawing=off background.drawing=off script="$PLUGIN_DIR/front_app.sh" \
  --subscribe front_app front_app_switched \
  --add item display_change_listener left \
  --set display_change_listener drawing=off script="$PLUGIN_DIR/monitor_change.sh" \
  --subscribe display_change_listener display_change \
  --add item monitor_watcher left \
  --set monitor_watcher drawing=off update_freq=2 script="$PLUGIN_DIR/monitor_watcher.sh" \
  --add item clock right \
  --set clock update_freq=1 icon= script="$PLUGIN_DIR/clock.sh" \
        label.font="Hack Nerd Font:Bold:13.0" \
        label.padding_right=8 \
        background.border_width=2 background.border_color=0xAA7aa2f7 \
  --add item calendar right \
  --set calendar update_freq=30 icon="󰃰" script="$PLUGIN_DIR/calendar.sh" \
        click_script="$PLUGIN_DIR/calendar_click.sh" \
        icon.font="Hack Nerd Font:Bold:13.0" icon.padding_left=8 \
        label.font="Hack Nerd Font:Bold:13.0" label.padding_right=8 \
        background.border_width=2 background.border_color=0xAAbb9af7 \
  --add item progress right \
  --set progress update_freq=30 icon= script="$PLUGIN_DIR/progress.sh" \
        label.font="Hack Nerd Font:Bold:13.0" \
        label.padding_right=8 \
        background.border_width=2 background.border_color=0xAAff9e64 \
  --add item battery right \
  --set battery icon="Bat" update_freq=120 script="$PLUGIN_DIR/battery.sh" \
        padding_left=5 padding_right=0 \
        icon.padding_left=0 icon.padding_right=0 \
        label.padding_left=0 label.padding_right=5 \
        label.font="Hack Nerd Font:Bold:13.0" icon.font="Hack Nerd Font:Bold:13.0" \
        background.drawing=off \
  --subscribe battery system_woke power_source_change \
  --add item ram.used right \
  --set ram.used \
        background.drawing=off \
        width=0 padding_left=4 padding_right=4 \
        icon="RAM" icon.font="Hack Nerd Font:Bold:9.0" icon.padding_left=4 icon.padding_right=4 icon.color=0xffffffff \
        label.font="Hack Nerd Font:Bold:10.0" label.padding_left=0 label.padding_right=0 label.color=0xff50fa7b \
        y_offset=6 update_freq=5 script="$PLUGIN_DIR/ram.sh" \
  --add item ram.total right \
  --set ram.total \
        background.drawing=off \
        padding_left=4 padding_right=4 \
        icon.font="Hack Nerd Font:Bold:9.0" icon.padding_left=4 icon.padding_right=4 icon.color=0xff50fa7b \
        label.font="Hack Nerd Font:Bold:10.0" label.padding_left=0 label.padding_right=0 label.color=0xff50fa7b \
        y_offset=-6 \
  --add item wifi.up right \
  --set wifi.up \
        background.drawing=off \
        width=0 padding_left=4 padding_right=4 \
        icon="▲" icon.font="Hack Nerd Font:Bold:9.0" icon.padding_left=0 icon.padding_right=0 icon.color=0xffbf616a \
        label.font="Hack Nerd Font:Bold:10.0" label.padding_left=0 label.padding_right=0 label.color=0xffbf616a label="000 Bps" \
        y_offset=6 update_freq=1 script="$PLUGIN_DIR/network.sh" \
  --add item wifi.down right \
  --set wifi.down \
        background.drawing=off \
        padding_left=4 padding_right=4 \
        icon="▼" icon.font="Hack Nerd Font:Bold:9.0" icon.padding_left=0 icon.padding_right=0 icon.color=0xff5e81ac \
        label.font="Hack Nerd Font:Bold:10.0" label.padding_left=0 label.padding_right=0 label.color=0xff5e81ac label="000 Bps" \
        y_offset=-6 \

gradient_colors=(0xAA73daca 0xAA7aa2f7 0xAAbb9af7)
total=${#workspace_data[@]}

workspace_args=()
i=0
for data in "${workspace_data[@]}"; do
  sid="${data%:*}"
  display_id="${data#*:}"
  if (( total <= 1 )); then ci=0
  else ci=$(( i * (${#gradient_colors[@]} - 1) * 100 / (total - 1) )); ci=$(( ci / 100 )); fi
  (( ci >= ${#gradient_colors[@]} )) && ci=$(( ${#gradient_colors[@]} - 1 ))
  border_color="${gradient_colors[$((ci + 1))]}"
  workspace_args+=(
    --add item space.$sid left
    --set space.$sid display="$display_id"
          drawing=on
          background.color=0x44ffffff background.corner_radius=5
          background.drawing=on background.border_color="$border_color"
          background.border_width=2 background.height=22
          icon="$sid" icon.padding_left=10
          icon.shadow.distance=4 icon.shadow.color=0xA0000000
          label.font="sketchybar-app-font:Regular:16.0"
          label.padding_right=20 label.padding_left=0 label.y_offset=-1
          label.shadow.drawing=off label.shadow.color=0xA0000000 label.shadow.distance=4
          click_script="aerospace workspace $sid"
          script="$PLUGIN_DIR/workspace.sh $sid $border_color"
    --subscribe space.$sid aerospace_workspace_change
  )
  (( i++ ))
done

[[ ${#workspace_args[@]} -gt 0 ]] && sketchybar "${workspace_args[@]}"

"$PLUGIN_DIR/update_workspace_icons.sh" &

sketchybar --update
