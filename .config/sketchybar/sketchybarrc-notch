#!/usr/bin/env zsh

PLUGIN_DIR="$CONFIG_DIR/plugins"

source "$CONFIG_DIR/colors.sh"

# Build aerospace -> sketchybar display mapping
typeset -A DISPLAY_MAP
while IFS=: read -r a s; do DISPLAY_MAP[$a]=$s; done < <("$CONFIG_DIR/plugins/display_map.sh")

# Pre-compute all data in one pass — dynamic monitor support
workspace_data=()

for monitor_id in $(aerospace list-monitors | awk '{print $1}'); do
  sb_display="${DISPLAY_MAP[$monitor_id]:-1}"
  for sid in $(aerospace list-workspaces --monitor "$monitor_id"); do
    [[ "$sid" == "0" ]] && continue
    workspace_data+=("$sid:$sb_display")
  done
done

# Ultra-batched configuration - maximum performance
sketchybar \
  --bar position=top height=32 blur_radius=30 color=0x40000000 \
  --default padding_left=5 padding_right=5 \
           icon.font="Hack Nerd Font:Bold:17.0" \
           label.font="SF Pro:Semibold:17.0" \
           icon.color=0xffffffff label.color=0xffffffff \
           icon.padding_left=4 icon.padding_right=4 \
           label.padding_left=4 label.padding_right=4 \
           updates=on \
  --add event aerospace_workspace_change \
  --add event display_change \
  --add item chevron left \
  --set chevron icon=φ label.drawing=off \
  --add item front_app left \
  --set front_app icon.drawing=off script="$PLUGIN_DIR/consolidated_simple.sh" \
  --subscribe front_app front_app_switched \
  --add item display_change_listener left \
  --set display_change_listener drawing=off \
           script="$PLUGIN_DIR/monitor_change.sh" \
  --subscribe display_change_listener display_change \
  --add item monitor_watcher left \
  --set monitor_watcher drawing=off update_freq=2 \
           script="$PLUGIN_DIR/monitor_watcher.sh" \
  --add item clock right \
  --set clock update_freq=1 icon= script="$PLUGIN_DIR/consolidated_simple.sh" \
  --add item battery right \
  --set battery update_freq=120 script="$PLUGIN_DIR/consolidated_simple.sh" \
  --subscribe battery system_woke power_source_change \
  --add item network right \
  --set network update_freq=1 script="$PLUGIN_DIR/network.sh"

# Batch all workspace creation
workspace_args=()
for data in "${workspace_data[@]}"; do
  sid="${data%:*}"
  display_id="${data#*:}"
  
  workspace_args+=(
    --add item space.$sid left
    --set space.$sid display="$display_id"
          drawing=on
          background.color=0x44ffffff
          background.corner_radius=5
          background.drawing=on
          background.border_color=0xAAFFFFFF
          background.border_width=0
          background.height=20
          icon="$sid"
          icon.padding_left=10
          icon.shadow.distance=4
          icon.shadow.color=0xA0000000
          label.font="sketchybar-app-font:Regular:16.0"
          label.padding_right=20
          label.padding_left=0
          label.y_offset=-1
          label.shadow.drawing=off
          label.shadow.color=0xA0000000
          label.shadow.distance=4
          click_script="aerospace workspace $sid"
          script="$CONFIG_DIR/plugins/consolidated_simple.sh $sid"
    --subscribe space.$sid aerospace_workspace_change
  )
done

[[ ${#workspace_args[@]} -gt 0 ]] && sketchybar "${workspace_args[@]}"

# Asynchronous background loading for maximum perceived performance
"$CONFIG_DIR/plugins/update_workspace_icons.sh" &

sketchybar --update
