# Newsboat Configuration

# Colors and styling - High contrast dark theme
color background          color11  color0    # Bright yellow on black
color listnormal          color7   color0    # Light gray on black
color listnormal_unread   color10  color0 bold    # Bright green for unread items
color listfocus           color0   color14   # Black text on bright cyan background
color listfocus_unread    color0   color9 bold    # Black on bright red for unread focus
color info                color11  color8    # Bright yellow on dark gray info bar
color article             color14  color0    # Bright cyan text for articles

# Article view highlighting with high contrast colors
highlight article "^[A-Z][^a-z]*$" color13 color0 bold        # Bright magenta headers on black
highlight article "^#+\s.*" color12 color0 bold               # Bright blue headers on black
highlight article "^[A-Za-z0-9][^.!?]*[.!?]$" color10 color0  # Bright green sentences on black
highlight article "^\\*\\*.*\\*\\*" color11 color0 bold       # Bright yellow bold text on black
highlight article "^__.*__" color11 color0 bold               # Bright yellow underlined text on black
highlight article "\\[[0-9]+\\]" color14 color0              # Bright cyan reference numbers on black
highlight article "https?://[^ ]+" color12 color0 underline   # Bright blue underlined URLs on black

# Interface styling
feedlist-format     "%4i %n %11u %t"
articlelist-format  "%4i %f %D   %?T?|%-17T|  ?%t"

# Key bindings
bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key d pagedown
bind-key u pageup
bind-key l open
bind-key h quit
bind-key a toggle-article-read
bind-key n next-unread
bind-key N prev-unread
bind-key D pb-download
bind-key U show-urls
bind-key x pb-delete

# Browser
browser "open %u"

# Refresh settings
auto-reload yes
reload-time 120
reload-threads 4

# Display settings
show-read-feeds no
show-read-articles yes
max-items 100

# Date format
datetime-format "%Y-%m-%d %H:%M"

# Feed sorting
feed-sort-order unreadarticlecount-asc
